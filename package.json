    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "path": "^0.12.7",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
